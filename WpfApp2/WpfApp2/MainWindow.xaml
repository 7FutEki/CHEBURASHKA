<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        
        MinHeight="500"
        MinWidth="500"
        MaxHeight="1000"
        MaxWidth="1000"
        
        Title="cheburash" Height="400" Width="400">
    <Grid Background="SaddleBrown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="cheburash"
                Text="Здесь будет случайное фраза" FontSize="24"
                       Margin="0, 0, 0, 15" Foreground="White"/>
            <Button Click="Button_Click" Content="Нажми меня и получишь фразу" Foreground="Black" Height="82"/>
            
        </StackPanel>
    </Grid>
</Window>
